<Page x:Class="zad3.Views.ShowStudentView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:zad3.Views"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="525"
      Title="ShowStudentView">

    <Grid Name="gShowStudent" Background="White">
        <Label x:Name="lbName" Content="Imię:" HorizontalAlignment="Left" Margin="16,19,0,0" VerticalAlignment="Top"  Width="56"/>
        <TextBox x:Name="tbName" HorizontalAlignment="Left"  Margin="174,24,0,0" Text="{Binding Name}" TextWrapping="Wrap"  VerticalAlignment="Top" Width="192"/>
        <Label x:Name="lbSurname" Content="Nazwisko:" HorizontalAlignment="Left" Margin="16,47,0,0" VerticalAlignment="Top"  Width="101"/>
        <TextBox x:Name="tbSurname" HorizontalAlignment="Left"  Margin="174,51,0,0" Text="{Binding Surname}" TextWrapping="Wrap" VerticalAlignment="Top" Width="192"/>

        <Button x:Name="btnEdit" Content="Edytuj" HorizontalAlignment="Left" Margin="246,131,0,0" VerticalAlignment="Top" Width="120" Height="35" Click="btnEdit_Click"/>
        <Button x:Name="btnBack" Content="Wstecz" HorizontalAlignment="Left" Margin="107,131,0,0" VerticalAlignment="Top" Width="120" Height="35" Click="btnBack_Click"/>
    </Grid>
</Page>
